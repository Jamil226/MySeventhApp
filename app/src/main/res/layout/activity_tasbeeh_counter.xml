<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_counter"
    tools:context=".TasbeehCounter">
    <RelativeLayout
        android:background="@color/bg_counter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_counter_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/counter_value"
            android:textSize="60sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            />
        <Button
            android:id="@+id/btn_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:text="@string/btn_counter"
            android:textSize="30sp"
            android:padding="10dp"
            android:layout_below="@+id/tv_counter_label"
            />
        <Button
            android:id="@+id/btn_freeze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:text="@string/btn_freeze"
            android:textSize="30sp"
            android:padding="10dp"
            android:layout_marginBottom="50dp"
            android:layout_below="@+id/btn_count"
            />

    </RelativeLayout>

</ScrollView>